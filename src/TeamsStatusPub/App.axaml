<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="TeamsStatusPub.App"
             xmlns:local="using:TeamsStatusPub"
             RequestedThemeVariant="Default">
  <Application.DataTemplates>
    <local:ViewLocator />
  </Application.DataTemplates>

  <Application.Styles>
    <SimpleTheme />
  </Application.Styles>

  <TrayIcon.Icons>
    <TrayIcons>
      <TrayIcon Icon="/Assets/logo.ico"
                ToolTipText="TeamsStatusPub">
        <TrayIcon.Menu>
          <NativeMenu>
            <NativeMenuItem Header="About" Click="AboutMenuClick" />
            <NativeMenuItem Header="Exit" Click="ExitMenuClick" />
          </NativeMenu>
        </TrayIcon.Menu>
      </TrayIcon>
    </TrayIcons>
  </TrayIcon.Icons>
</Application>